<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_librarian_form" model="ir.ui.view">
        <field name="name">Librarian</field>
        <field name="model">users.librarian</field>
        <field name="arch" type="xml">
            <form string="Librarians">
                <field name="librarian_image" widget="image" class="oe_avatar"/>
                <sheet>
                    <group>
                        <field name="librarian_id"/>
                        <field name="librarian_name"/>
                        <field name="email"/>
                        <field name="phone_number"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_librarian_list" model="ir.ui.view">
        <field name="name">Librarians</field>
        <field name="model">users.librarian</field>
        <field name="arch" type="xml">
            <list string="Librarian">
                <field name="librarian_image" widget="image" options="{'size': [64, 64]}" class="oe_avatar"/>

                        <field name="librarian_id"/>
                        <field name="librarian_name"/>
                        <field name="email"/>
                        <field name="phone_number"/>
            </list>
        </field>
    </record>



    <record id="action_users_librarian" model="ir.actions.act_window">
        <field name="name">Librarians</field>
        <field name="res_model">users.librarian</field>
        <field name="view_mode">list,form</field>
<!--        <field name="view_id" ref="view_teacher_list"/>-->
    </record>

</odoo>