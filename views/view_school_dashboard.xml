<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="act_school_teachers" model="ir.actions.act_window">
        <field name="name">School Teachers</field>
        <field name="res_model">hr.employee</field>
        <field name="view_mode">list,form</field>
    </record>

    <record id="act_school_students" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="res_model">school.student</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="SchoolManagementSystem.view_student_graph"/>
    </record>
    <record id="act_school_drivers" model="ir.actions.act_window">
            <field name="name">Drivers</field>
            <field name="res_model">school.drivers</field>
            <field name="view_mode">graph</field>
            <field name="search_view_id" ref="view_attendance_search"/>
                    <field name="view_id" ref="SchoolManagementSystem.view_driver_graph"/>

        </record>
    <record id="action_attendance_pie_graph" model="ir.actions.act_window">
    <field name="name">Attendance Overview</field>
    <field name="res_model">academic.takeattendance</field>
    <field name="view_mode">graph</field>
    <field name="view_id" ref="SchoolManagementSystem.view_attendance_pie_graph"/>
</record>


        <record id="act_users_parents" model="ir.actions.act_window">
            <field name="name">Parents</field>
            <field name="res_model">users.parents</field>
            <field name="view_mode">list,form</field>
        </record>

        <record id="act_users_events" model="ir.actions.act_window">
            <field name="name">Events</field>
            <field name="res_model">users.events</field>
            <field name="view_mode">list,form</field>
        </record>

    <record id="school_dashboard_view" model="ir.ui.view">
        <field name="name">Dashboard Form</field>
        <field name="model">board.board</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Dashboard">
                <board style="2-2">
                    <column>
                        <action
                                string="Teachers"
                                name="%(SchoolManagementSystem.act_school_teachers)d"/>
                        <action
                                string="Students"
                                name="%(SchoolManagementSystem.act_school_students)d"/>
                        <action string="Attendance" name="%(SchoolManagementSystem.action_attendance_pie_graph)d"/>

                         <action
                                string="Drivers"
                                name="%(SchoolManagementSystem.act_school_drivers)d"/>
                          <action string="Parents" name="%(SchoolManagementSystem.act_users_parents)d"/>
                            <action string="Events" name="%(SchoolManagementSystem.act_users_events)d"/>

                    </column>
                </board>
            </form>
        </field>
    </record>

    <record id="school_dashboard" model="ir.actions.act_window">
        <field name="name">Dashboard</field>
        <field name="res_model">board.board</field>
        <field name="view_mode">form</field>
        <field name="usage">menu</field>
        <field name="view_id" ref="school_dashboard_view"/>
    </record>

</odoo>
