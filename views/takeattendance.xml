<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_takeattendance_form" model="ir.ui.view">
        <field name="name">Take Attendance</field>
        <field name="model">academic.takeattendance</field>
        <field name="arch" type="xml">
            <form string="Take Attendance">
                <sheet>
                    <group>
                        <field name="date"/>
                        <field name="class_namess"/>
                        <field name="section"/>
                        <field name="student"/>
<!--                        <field name="attendance" widget="badge"-->
<!--                           decoration-success="attendance == 'present'"-->
<!--                           decoration-danger="attendance == 'absent'"/>-->
                        <field name="attendance"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_save_attendance" string="Save" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="view_attendance_pie_graph" model="ir.ui.view">
    <field name="name">Attendance Graph</field>
    <field name="model">academic.takeattendance</field>
    <field name="arch" type="xml">
        <graph string="Attendance Summary" type="bar">
            <field name="attendance" type="row"/>
            <field name="id" type="measure"/>
                        <field name="date" type="col" interval="day"/>
        </graph>
    </field>
</record>
<record id="view_attendance_search" model="ir.ui.view">
    <field name="name">academic.takeattendance.search</field>
    <field name="model">academic.takeattendance</field>
    <field name="arch" type="xml">
        <search string="Search Attendance">
            <field name="date" filter_domain="[]" string="Date"/>
            <filter name="group_by_date" string="Group by Date" context="{'group_by': 'date'}"/>
        </search>
    </field>
</record>



    <record id="view_take_attendance_list" model="ir.ui.view">
        <field name="name">Take Attendance</field>
        <field name="model">academic.takeattendance</field>
        <field name="arch" type="xml">
            <list string="Take Attendance">
                <field name="date"/>
                <field name="class_namess"/>
                <field name="section"/>
                <field name="student"/>
                <field name="attendance" widget="badge"
                           decoration-success="attendance == 'present'"
                           decoration-danger="attendance == 'absent'"/>

<!--                <field name="attendance" widget="badge"-->
<!--                           decoration-success="attendance == 'present'"-->
<!--                           decoration-danger="attendance == 'absent'"/>-->
            </list>
        </field>
    </record>


    <record id="action_academic_take_attendance" model="ir.actions.act_window">
        <field name="name">Take Attendance</field>
        <field name="res_model">academic.takeattendance</field>
        <field name="view_mode">list,form</field>
        <!--        <field name="view_id" ref="view_teacher_list"/>-->
    </record>

</odoo>