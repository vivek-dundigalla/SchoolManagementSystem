<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_marklines_form" model="ir.ui.view">
        <field name="name">Mark Lines</field>
        <field name="model">exam.marklines</field>
        <field name="arch" type="xml">
            <form string="Mark Lines">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="mark"/>
                        <field name="grade_point"/>
                        <field name="comment"/>

                    </group>
                </sheet>
                 <footer>
            <button name="action_save_marks" string="Save" type="object" class="btn-primary"/>
            <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
            </form>
        </field>
    </record>

    <record id="view_marklines_list" model="ir.ui.view">
        <field name="name">Mark Lines</field>
        <field name="model">exam.marklines</field>
        <field name="arch" type="xml">
            <list string="Mark Lines">
                   <field name="name"/>
                        <field name="mark"/>
                        <field name="grade_point"/>
                        <field name="comment"/>

            </list>
        </field>

    </record>




    <record id="action_exam_mark_lines" model="ir.actions.act_window">
        <field name="name">Mark Lines</field>
        <field name="res_model">exam.marklines</field>
        <field name="view_mode">list,form</field>
        <!--        <field name="view_id" ref="view_teacher_list"/>-->
    </record>

</odoo>