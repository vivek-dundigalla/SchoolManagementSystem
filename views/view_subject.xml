<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_academic_subject_form" model="ir.ui.view">
        <field name="name">academic.subject.form</field>
        <field name="model">academic.subject</field>
        <field name="arch" type="xml">
            <form string="Academic Subject">
                <header>
                    <button name="add_subject" string="Add Routine" type="object" class="oe_highlight"/>

                </header>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="standard"></field>
                    </group>
                    <xpath expr="//field[@name='standard']" position="after">
                        <button name="filter_subject" string="Filter" type="object" class="oe_highlight"/>

                    </xpath>
                </sheet>
            </form>
        </field>
    </record>
    <record id="view_academic_subject_list" model="ir.ui.view">
        <field name="name">academic.subject.list</field>
        <field name="model">academic.subject</field>
        <field name="arch" type="xml">
            <list string="Academic Subject">
                <field name="standard"/>
                <field name="name"/>
            </list>
        </field>


    </record>


    <record id="action_academic_subject" model="ir.actions.act_window">
        <field name="name">Subject</field>
        <field name="res_model">academic.subject</field>
        <field name="view_mode">form</field>
    </record>
</odoo>