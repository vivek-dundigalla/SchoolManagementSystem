<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_teachers_form" model="ir.ui.view">
        <field name="name">Teachers</field>
        <field name="model">users.teachers</field>
        <field name="arch" type="xml">
            <form string="Teachers">
                <header>
                    <button name="action_create_teacher" string="+ Create Teacher" type="object" class="oe_highlight"/>
                </header>
                <field name="teacher_image" widget="image" class="oe_avatar"/>
                <sheet>
                    <group>
                        <field name="teacher_name"/>
                        <field name="department"/>
                        <field name="designation"/>
                        <field name="phone_number"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_teachers_list" model="ir.ui.view">
        <field name="name">Teachers</field>
        <field name="model">users.teachers</field>
        <field name="arch" type="xml">
            <list string="Teachers">
                <field name="teacher_image" widget="image" options="{'size': [64, 64]}" class="oe_avatar"/>
                        <field name="teacher_name"/>
                        <field name="department"/>
                        <field name="designation"/>
                        <field name="phone_number"/>
            </list>
        </field>
    </record>

    <record id="action_users_teachers" model="ir.actions.act_window">
        <field name="name">Teachers</field>
        <field name="res_model">users.teachers</field>
        <field name="view_mode">list,form</field>
<!--        <field name="view_id" ref="view_teacher_list"/>-->
    </record>

</odoo>